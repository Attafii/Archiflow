   <string notr="true">/* Dark Theme Stylesheet for Material Management System */

/* Global Application Style */
QWidget {
    background-color: #2A3340; /* Accent Dark */
    color: #FFFFFF;
    font-family: "Segoe UI", Arial, sans-serif;
    font-size: 10pt;
}

/* Main Window */
QMainWindow {
    background-color: #3D485A; /* Primary Dark */
    border: none;
}

/* Menu Bar */
QMenuBar {
    background-color: #3D485A; /* Primary Dark */
    color: #FFFFFF;
    border-bottom: 1px solid #2A3340; /* Accent Dark */
}

QMenuBar::item {
    background-color: transparent;
    padding: 5px 10px;
}

QMenuBar::item:selected {
    background-color: #2A3340; /* Accent Dark */
    color: #E3C6B0; /* Primary Light */
}

/* Menu */
QMenu {
    background-color: #3D485A; /* Primary Dark */
    border: 1px solid #2A3340; /* Accent Dark */
    border-radius: 4px;
}

QMenu::item {
    padding: 8px 20px 8px 20px;
}

QMenu::item:selected {
    background-color: #2A3340; /* Accent Dark */
    color: #E3C6B0; /* Primary Light */
}

/* Push Buttons */
QPushButton {
    background-color: #E3C6B0; /* Primary Light */
    color: #2A3340; /* Accent Dark */
    border: none;
    padding: 8px 15px;
    border-radius: 4px;
    min-width: 80px;
    font-weight: bold;
}

QPushButton:hover {
    background-color: #D4B7A1; /* Accent Light */
}

QPushButton:pressed {
    background-color: #D4B7A1; /* Accent Light */
}

QPushButton:disabled {
    background-color: #3D485A; /* Primary Dark */
    color: #9D9D9D;
}

/* Status Colors for Buttons */
QPushButton.error-button {
    background-color: #FF6B6B; /* Error */
    color: white;
}

QPushButton.success-button {
    background-color: #4CAF50; /* Success */
    color: white;
}

QPushButton.warning-button {
    background-color: #FFA726; /* Warning */
    color: white;
}

/* Line Edit */
QLineEdit {
    background-color: #2A3340; /* Accent Dark */
    border: 1px solid #3D485A; /* Primary Dark */
    border-radius: 4px;
    padding: 8px;
    color: #FFFFFF;
}

QLineEdit:focus {
    border: 1px solid #E3C6B0; /* Primary Light */
    background-color: #3D485A; /* Primary Dark */
}

QLineEdit:hover {
    border: 1px solid #D4B7A1; /* Accent Light */
}

/* Combo Box */
QComboBox {
    background-color: #2A3340; /* Accent Dark */
    border: 1px solid #3D485A; /* Primary Dark */
    border-radius: 4px;
    padding: 8px;
    min-width: 6em;
    color: #FFFFFF;
}

QComboBox:on {
    border: 1px solid #E3C6B0; /* Primary Light */
}

QComboBox:hover {
    border: 1px solid #D4B7A1; /* Accent Light */
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 15px;
    border-left: 1px solid #3E3E42;
}

QComboBox::down-arrow {
    image: url(:/icons/dropdown-arrow.png);
}

/* Spin Box */
QSpinBox, QDoubleSpinBox {
    background-color: #2A3340; /* Accent Dark */
    border: 1px solid #3D485A; /* Primary Dark */
    border-radius: 4px;
    padding: 8px;
    color: #FFFFFF;
}

QSpinBox:hover, QDoubleSpinBox:hover {
    border: 1px solid #D4B7A1; /* Accent Light */
}

QSpinBox:focus, QDoubleSpinBox:focus {
    border: 1px solid #E3C6B0; /* Primary Light */
    background-color: #3D485A; /* Primary Dark */
}

QSpinBox::up-button, QDoubleSpinBox::up-button {
    subcontrol-origin: border;
    subcontrol-position: top right;
    width: 16px;
    border-left: 1px solid #3E3E42;
    border-bottom: 1px solid #3E3E42;
}

QSpinBox::down-button, QDoubleSpinBox::down-button {
    subcontrol-origin: border;
    subcontrol-position: bottom right;
    width: 16px;
    border-left: 1px solid #3E3E42;
    border-top: 1px solid #3E3E42;
}

/* Text Edit */
QTextEdit {
    background-color: #2A3340; /* Accent Dark */
    border: 1px solid #3D485A; /* Primary Dark */
    border-radius: 4px;
    color: #FFFFFF;
    padding: 5px;
}

QTextEdit:focus {
    border: 1px solid #E3C6B0; /* Primary Light */
    background-color: #3D485A; /* Primary Dark */
}

QTextEdit:hover {
    border: 1px solid #D4B7A1; /* Accent Light */
}

/* Group Box */
QGroupBox {
    border: 1px solid #3D485A; /* Primary Dark */
    border-radius: 6px;
    margin-top: 20px;
    padding-top: 15px;
    font-weight: bold;
    background-color: #2A3340; /* Accent Dark */
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 8px;
    color: #E3C6B0; /* Primary Light */
    font-size: 11pt;
}

/* Table View */
QTableView {
    background-color: #2A3340; /* Accent Dark */
    alternate-background-color: #3D485A; /* Primary Dark */
    border: 1px solid #3D485A; /* Primary Dark */
    gridline-color: #3D485A; /* Primary Dark */
    color: #FFFFFF;
    border-radius: 4px;
}

QTableView::item:selected {
    background-color: #E3C6B0; /* Primary Light */
    color: #2A3340; /* Accent Dark */
}

QTableView::item:hover {
    background-color: #D4B7A1; /* Accent Light */
    color: #2A3340; /* Accent Dark */
}

QHeaderView::section {
    background-color: #3D485A; /* Primary Dark */
    padding: 8px;
    border: 1px solid #2A3340; /* Accent Dark */
    color: #E3C6B0; /* Primary Light */
    font-weight: bold;
}

/* Scroll Bar - Modern Style */
QScrollBar:vertical {
    border: none;
    background: #2A3340; /* Accent Dark */
    width: 12px;
    margin: 0px;
    border-radius: 6px;
}

QScrollBar::handle:vertical {
    background: #E3C6B0; /* Primary Light */
    min-height: 30px;
    border-radius: 6px;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    border: none;
    background: #2A3340; /* Accent Dark */
    height: 12px;
    margin: 0px;
    border-radius: 6px;
}

QScrollBar::handle:horizontal {
    background: #E3C6B0; /* Primary Light */
    min-width: 30px;
    border-radius: 6px;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0px;
}

/* Sidebar Navigation */
#sidebarWidget {
    background-color: #2A3340; /* Accent Dark */
    border-right: 1px solid #3D485A; /* Primary Dark */
}

#sidebarWidget QPushButton {
    background-color: transparent;
    border: none;
    border-radius: 0;
    text-align: left;
    padding: 10px 15px;
    font-weight: bold;
    min-width: 150px;
    border-left: 4px solid transparent;
}

#sidebarWidget QPushButton:hover {
    background-color: #3D485A; /* Primary Dark */
    border-left: 4px solid #D4B7A1; /* Accent Light */
}

#sidebarWidget QPushButton:checked {
    background-color: #3D485A; /* Primary Dark */
    border-left: 4px solid #E3C6B0; /* Primary Light */
    color: #E3C6B0; /* Primary Light */
}
